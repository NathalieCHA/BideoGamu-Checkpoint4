{% extends 'front/base.html.twig' %}

{% block title %}BideoGamu{% endblock %}

{% block body %}
    <div class="categoryname">
        {% for category in categories %}
            <div class="category">
                <a href="{{ path("category_show", { name: category.name }) }}">{{ category.name }}</a>
            </div>
        {% else %}
            Aucune catégorie trouvée.
        {% endfor %}
        <br/>
    </div>

    <a class="redirection" href="{{ path('home') }}">Back to the homepage</a>
{% endblock %}
