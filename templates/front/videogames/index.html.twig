{% extends 'front/base.html.twig' %}

{% block title %}BideoGamu{% endblock %}

{% block body %}

{{ form_start(form) }}
        <div class="searchbar">
            <div>
            {{ form_widget(form.search) }}
                {{ form_help(form.search) }}
                {{ form_errors(form.search) }}
                <button id="search" class="btn-primary"><i class="fas fa-search"></i></button>
            </div>
        </div>
{{ form_end(form) }}

<div class="videogames">
        {% for videogame in videogames %}
            <div class="encart">
                <div class="full">
                    <a href="{{ path("videogames_show", { 'id': videogame.id }) }}"><img src="{{ vich_uploader_asset(videogame, "imgFile") }}"></a>
                </div>
                    <div class ="cliquable">
                        <h2>{{ videogame.name }}</h2>
                        <p>Cat√©gorie : {{ videogame.category.name }}<p>
                        <p>{{ videogame.description| striptags | slice(0, 200) }} <a href="">[...]</a></p>
                    </div>
            </div>
        {% else %}
            <p>No game fund.</p>
        {% endfor %}
    </div>

{% endblock %}
