{% extends 'front/base.html.twig' %}

{% block title %}Videogames{% endblock %}

{% block body %}
    <h1>Videogames</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ videogame.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ videogame.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ videogame.description }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ videogame.releaseDate ? videogame.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HowLongToBeat</th>
                <td>{{ videogame.howLongToBeat }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ videogame.img }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('videogames_index') }}">back to list</a>

    <a href="{{ path('videogames_edit', {'id': videogame.id}) }}">edit</a>

    {{ include('front/videogames/_delete_form.html.twig') }}
{% endblock %}
